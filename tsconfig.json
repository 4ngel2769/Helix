{
	"extends": [
		"@sapphire/ts-config",
		"@sapphire/ts-config/extra-strict",
		"@sapphire/ts-config/decorators"
	],
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"tsBuildInfoFile": "dist/.tsbuildinfo",
		"skipLibCheck": true
	},
	"include": ["src/**/*", "config.ts"],
	"exclude": ["node_modules"]
}
